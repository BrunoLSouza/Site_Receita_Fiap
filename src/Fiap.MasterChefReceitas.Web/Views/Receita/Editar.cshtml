@model Fiap.MasterChefReceitas.Web.Models.NovoReceitaViewModel

@{
    ViewData["Title"] = "Editar";
}

<h4 style="margin-left:20px">Editar Receita</h4>
<hr />

<div class="row">
    <div class="col-md-2"></div>
    <div class="col-md-8">
        <div class="row">
            <div class="col-md-6">
                <form asp-action="Editar">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input asp-for="IdReceita" class="form-control" />
                    <input asp-for="IngredientesTexto" class="form-control" />

                    <div class="form-group">
                        <label asp-for="TituloReceita" class="control-label">Titulo</label>
                        <input asp-for="TituloReceita" class="form-control" autocomplete="off" />
                        <span asp-validation-for="TituloReceita" class="text-danger"></span>
                    </div>

                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label asp-for="Rendimento" class="control-label">Rendimento </label><span class="small">(Porção)</span>
                                <input asp-for="Rendimento" class="form-control" />
                                <span asp-validation-for="Rendimento" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label asp-for="TempoPreparo" class="control-label">Tempo Preparo</label><span class="small">(Min)</span>
                                <input asp-for="TempoPreparo" class="form-control" />
                                <span asp-validation-for="TempoPreparo" class="text-danger"></span>
                            </div>
                        </div>
                    </div>

                    <div class="form-group">
                        <label asp-for="Preparos" class="control-label">Preparo</label>
                        <textarea asp-for="Preparos" class="form-control preparosTextArea"></textarea>
                        <span asp-validation-for="Preparos" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Alterar" class="btn btn-primary" />
                        <a href="@Url.Action("Index", "Home")" class="btn btn-secondary">Voltar</a>
                    </div>
                </form>
            </div>
            <div class="col-md-6">
                <h2>Ingredientes</h2>
                <div class="form-group">
                    <label id="lblNomeIngrediente" class="control-label">Nome</label>
                    <input id="txtNomeIngrediente" class="form-control" />
                </div>

                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label id="lblQuantidadeIngrediente" class="control-label">Quantidade</label>
                            <input id="txtQuantidadeIngrediente" class="form-control" />
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <input type="button" value="Adicionar" class="btn btn-primary" style="bottom: 17px !important; position: absolute;" onclick="AddIngrediente();" />
                        </div>
                    </div>
                </div>

                <table id="tblIngredientes" class="table">
                    <thead>
                        <tr>
                            <th>Nome Ingrediente</th>
                            <th>Quantidade</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.Ingredientes)
                        {
                            <tr>
                                <td>@item.NomeIngrediente</td>
                                <td>@item.Quantidade</td>
                            </tr>
                        }
                    </tbody>
                </table>

            </div>
        </div>
        <div class="col-md-2"></div>
    </div>


    @section Scripts {
        @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
        <script src="~/js/NovaReceita.js"></script>
    }
