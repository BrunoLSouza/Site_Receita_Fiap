@model IEnumerable<Fiap.MasterChefReceitas.Web.Models.ReceitaViewModel>

@{
    ViewData["Title"] = "Home Page";
}


<!-- Full Page Image Header with Vertically Centered Content -->
<header class="masthead">
    <div class="container h-100">
        <div class="row h-100 align-items-center">
            <div class="col-12 text-center">
                <h1 class="font-weight-light">Vertically Centered Masthead Content</h1>
                <p class="lead">A great starter layout for a landing page</p>
            </div>
        </div>
    </div>
</header>
<br />

<div class="text-center">
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.IdReceita)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.TituloReceita)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Rendimento)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.TempoPreparo)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.IdReceita)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.TituloReceita)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Rendimento)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.TempoPreparo)
                    </td>
                    <td>
                        @Html.ActionLink("Editar", "Editar", "Receita", new { id = item.IdReceita }) |
                        @Html.ActionLink("Detalhe", "Detalhe", "Receita", new { id = item.IdReceita }) |
                        @Html.ActionLink("Deletar", "Deletar", "Receita", new { id = item.IdReceita })
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
